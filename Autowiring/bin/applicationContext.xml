<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  

 
<bean id="hostel1" class="com.varun.bean.Hostel">
<property name="hostelName" value="Vrindavan"></property>
<property name="city" value="Mumbai"></property>
</bean>

<bean id="Student" class="com.varun.bean.Student" autowire="byType">
<property name="id" value="7"></property>
<property name="name" value="varun"></property>
</bean>
  
</beans>  